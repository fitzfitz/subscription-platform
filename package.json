{
  "name": "subscription-platform",
  "private": true,
  "packageManager": "pnpm@9.1.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "generate": "turbo run generate",
    "migrate:local": "turbo run migrate:local",
    "seed:generate": "turbo run seed:generate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:execute": "pnpm --filter backend exec wrangler d1 execute DB --local",
    "setup": "tsx scripts/setup.ts"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^25.0.3",
    "bcryptjs": "^3.0.3",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "pnpm": {
    "overrides": {
      "zod": "3.24.1"
    }
  }
}
